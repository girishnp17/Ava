{
  "version": 2,
  "builds": [
    {
      "src": "run_app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "web-ui/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "run_app.py"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "GOOGLE_API_KEY": "@google_api_key",
    "GOOGLE_SEARCH_ENGINE_ID": "@google_search_engine_id", 
    "RAPIDAPI_KEY": "@rapidapi_key"
  },
  "functions": {
    "run_app.py": {
      "maxDuration": 30
    }
  }
}
